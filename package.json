{
  "name": "katha-sales",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:local",
    "dev:local": "cross-env VITE_USE_LOCAL_DB=true vite",
    "dev:live": "cross-env VITE_USE_LOCAL_DB=false vite",
    "build": "vite build",
    "build:local": "cross-env VITE_USE_LOCAL_DB=true vite build",
    "build:live": "cross-env VITE_USE_LOCAL_DB=false vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "backend": "node backend/index.cjs",
    "start": "concurrently \"npm run dev:local\" \"npm run backend\"",
    "start:live": "concurrently \"npm run dev:live\" \"npm run backend\"",
    "deploy": "npm run build && npm run deploy:server",
    "deploy:server": "scp -r dist/* root@168.231.122.33:/var/www/katha-sales/ && ssh root@168.231.122.33 \"pm2 restart katha-sales-backend && sudo systemctl restart nginx\""
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@heroicons/react": "^2.1.3",
    "@reduxjs/toolkit": "^1.9.0",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "daisyui": "^5.0.43",
    "express": "^5.1.0",
    "framer-motion": "^10.12.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-redux": "^8.0.0",
    "react-router-dom": "^6.11.0",
    "sqlite3": "^5.1.7",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.3.2"
  }
}
